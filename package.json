{
  "name": "kaas-vscode",
  "displayName": "K as a Service",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:kontrol.toml"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "kaas-vscode.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "kaas-vscode.refreshEntry",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "kaas-vscode.addEntry",
        "title": "Add KaaS Entry"
      },
      {
        "command": "kaas-vscode.editEntry",
        "title": "Edit KaaS Entry"
      },
      {
        "command": "kaas-vscode.deleteEntry",
        "title": "Delete KaaS Entry"
      }
    ],
    "configuration": {
      "title": "KaaS Configuration",
      "properties": {
        "kaas-vscode.apiKey": {
          "type": "string",
          "default": "default value",
          "description": "API Key for KaaS"
        }
      }
    },
    "views": {
      "test": [
        {
          "id": "kaas-vscode.remote-sync-view",
          "name": "Remote Sync"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "kaas-vscode.refreshEntry",
          "when": "view == kaas-vscode.remote-sync-view",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "git.init",
          "when": "view == kaas-vscode.remote-sync-view && viewItem == git-init",
          "group": "inline"
        },
        {
          "command": "git.publish",
          "when": "view == kaas-vscode.remote-sync-view && viewItem == git-publish",
          "group": "inline"
        },
        {
          "command": "git.commit",
          "when": "view == kaas-vscode.remote-sync-view && viewItem == git-commit",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "build": "npm run compile",
    "compile": "webpack --config webpack.config.js",
    "watch": "webpack --watch --config webpack.config.js",
    "package": "webpack --mode production --devtool hidden-source-map --config webpack.config.js",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.9",
    "@types/node": "^20.17.58",
    "@types/vscode": "^1.100.0",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.13.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.6.3",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "openapi-fetch": "^0.14.0",
    "smol-toml": "^1.3.4"
  },
  "extensionDependencies": [
    "vscode.git"
  ]
}
