{
  "name": "kaas-vscode",
  "displayName": "K as a Service",
  "description": "K as a Service (KaaS) extension for VS Code providing K framework integration and tooling",
  "license": "BSD-3-Clause",
  "version": "0.0.6",
  "publisher": "runtimeverification",
  "repository": {
    "type": "git",
    "url": "https://github.com/runtimeverification/kaas-vscode"
  },
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:kontrol.toml"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "kaas-vscode.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "kaas-vscode.refreshSyncView",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "kaas-vscode.seeJobDetails",
        "title": "View Job Details",
        "icon": "$(link-external)"
      },
      {
        "command": "kaas-vscode.viewReport",
        "title": "View Report",
        "icon": "$(file-text)"
      },
      {
        "command": "kaas-vscode.viewCache",
        "title": "View Cache",
        "icon": "$(database)"
      }
    ],
    "configuration": {
      "title": "KaaS Configuration",
      "properties": {
        "kaas-vscode.apiKey": {
          "type": "string",
          "default": "default value",
          "description": "API Key for KaaS"
        },
        "kaas-vscode.baseUrl": {
          "type": "string",
          "default": "https://kaas.runtimeverification.com",
          "description": "Base URL for KaaS API endpoints"
        }
      }
    },
    "views": {
      "test": [
        {
          "id": "kaas-vscode.remote-sync-view",
          "name": "Remote Sync"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "kaas-vscode.refreshSyncView",
          "when": "view == kaas-vscode.remote-sync-view",
          "group": "navigation"
        }
      ],
      "testing/item/context": [
        {
          "command": "kaas-vscode.seeJobDetails"
        },
        {
          "command": "kaas-vscode.viewReport"
        },
        {
          "command": "kaas-vscode.viewCache"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "build": "npm run compile",
    "compile": "webpack --config webpack.config.js",
    "watch": "webpack --watch --config webpack.config.js",
    "package": "webpack --mode production --devtool hidden-source-map --config webpack.config.js",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "fmt": "prettier --write \"src/**/*.{ts,js,json,md}\"",
    "fmt:check": "prettier --check \"src/**/*.{ts,js,json,md}\"",
    "test": "vscode-test",
    "prepare": "husky .husky"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.9",
    "@types/node": "^20.17.58",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.13.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "ts-loader": "^9.5.1",
    "typescript": "^5.6.3",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "git-url-parse": "^16.1.0",
    "openapi-fetch": "^0.14.0",
    "smol-toml": "^1.3.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,js}": [
      "eslint --fix",
      "prettier --write --config ./.prettierrc.json"
    ],
    "src/**/*.{json,md}": [
      "prettier --write --config ./.prettierrc.json"
    ]
  },
  "extensionDependencies": [
    "vscode.git"
  ]
}
